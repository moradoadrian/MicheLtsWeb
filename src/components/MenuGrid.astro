---
const { menu = [] } = Astro.props;

const promos = {
  lunes: "Miche LTS $75 / Carta Blanca $75",
  martes: "Cubeta $140 / 2 Caguamas $140",
  miercoles: "2 Caguamas $140 / 4 Cervezas $140",
  jueves: "Miche LTS $70 / Cubeta $150",
  viernes: "Miche LTS 3x2",
  sabado: "Miches LTS 2X1",
  domingo: "alitas 80",
};

const dias = [
  "domingo",
  "lunes",
  "martes",
  "miercoles",
  "jueves",
  "viernes",
  "sabado",
];

const hoy = dias[new Date().getDay()];
const promoHoy = promos[hoy as keyof typeof promos] ?? "";
---

<section id="menu" class="container mx-auto px-4 py-20">
  <div class="text-center mb-12">
    <h2 class="text-4xl md:text-5xl font-bold mb-4 text-white">
      Nuestra <span class="text-brand">Carta</span>
    </h2>
    <p class="text-gray-400 max-w-2xl mx-auto">
      Descubre nuestra selección de bebidas preparadas y snacks para acompañar
      tu noche.
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      menu.map((item: any) => (
        <article class="group bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-brand/50 transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,207,106,0.15)] hover:-translate-y-1">
          <div class="relative h-64 overflow-hidden">
            <img
              src={item.image}
              alt={item.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-60" />
            <div class="absolute bottom-4 left-4 right-4 flex justify-between items-end">
              <span class="text-2xl font-bold text-brand drop-shadow-md">
                {item.price ? `$${item.price}` : ""}
              </span>
            </div>
          </div>

          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 text-white group-hover:text-brand transition-colors">
              {item.title}
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              {item.description || "Una deliciosa opción para disfrutar."}
            </p>
          </div>
        </article>
      ))
    }
  </div>

  <div class="text-center mt-12">
    <a
      href="/Menu"
      class="inline-flex items-center gap-2 text-brand hover:text-white transition-colors font-medium uppercase tracking-wider text-sm border-b border-brand pb-1 hover:border-white"
    >
      Ver menú completo
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </a>
  </div>
</section>

{
  promoHoy && (
    <section class="mt-12 bg-brand/10 border border-brand/40 rounded-2xl p-6 text-center">
      <p class="text-sm uppercase tracking-widest text-brand mb-2">
        Promo de hoy ({hoy})
      </p>
      <h3 class="text-2xl md:text-3xl font-bold text-white">{promoHoy}</h3>
    </section>
  )
}
