---
import "../styles/globals.css";
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Miche Lts - Bar</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-bg text-white font-sans antialiased selection:bg-brand selection:text-black"
  >
    <header
      class="fixed top-0 w-full z-50 bg-bg/90 backdrop-blur-lg border-b border-white/20 shadow-lg"
    >
      <div
        class="container mx-auto px-6 lg:px-8 h-28 flex items-center justify-between"
      >
        <div class="flex items-center gap-4">
          <div
            class="w-20 h-20 lg:w-24 lg:h-24 rounded-full flex items-center justify-center bg-white/5 p-2 shadow-inner"
          >
            <img
              src="/images/logo.svg"
              alt="Miche Lts"
              class="w-full h-full object-contain"
            />
          </div>
          <div class="hidden sm:block">
            <h1 class="text-xl lg:text-2xl font-serif font-bold text-white">
              Miche Lts
            </h1>
            <p class="text-xs text-gray-400 uppercase tracking-wider">Bar</p>
          </div>
        </div>
        <nav
          class="hidden md:flex space-x-10 lg:space-x-12 text-base lg:text-lg font-medium uppercase tracking-wider"
        >
          <a
            href="/"
            class="hover:text-brand transition-all duration-300 relative group"
          >
            Inicio
            <span
              class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand transition-all duration-300 group-hover:w-full"
            ></span>
          </a>
          <a
            href="#menu"
            class="hover:text-brand transition-all duration-300 relative group"
          >
            Carta
            <span
              class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand transition-all duration-300 group-hover:w-full"
            ></span>
          </a>
          <a
            href="#eventos"
            class="hover:text-brand transition-all duration-300 relative group"
          >
            Eventos
            <span
              class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand transition-all duration-300 group-hover:w-full"
            ></span>
          </a>
          <a
            href="#contacto"
            class="hover:text-brand transition-all duration-300 relative group"
          >
            Contacto
            <span
              class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand transition-all duration-300 group-hover:w-full"
            ></span>
          </a>
        </nav>
      </div>
    </header>

    <main class="pt-28 min-h-screen">
      <slot />
    </main>

    <footer class="mt-20 py-12 border-t border-white/10 bg-black/40">
      <div class="container mx-auto px-4 text-center">
        <h3 class="text-2xl font-serif font-bold mb-4">Miche Lts</h3>
        <p class="text-gray-400 mb-6">El mejor ambiente de Celaya.</p>
        <div class="text-sm text-gray-500">
          &copy; {new Date().getFullYear()} Miche Lts. Todos los derechos reservados.
        </div>
      </div>
    </footer>
  </body>
</html>
