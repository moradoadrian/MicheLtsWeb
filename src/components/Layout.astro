---
import "../styles/globals.css";
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Miche Lts - Bar</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-bg text-white font-sans antialiased selection:bg-brand selection:text-black"
  >
    <header
      class="fixed top-0 w-full z-50 bg-bg/90 backdrop-blur-lg border-b border-white/20 shadow-lg"
    >
      <div
        class="container mx-auto px-6 lg:px-8 h-28 flex items-center justify-between"
      >
        <!-- LOGO -->
        <div class="flex items-center gap-4">
          <div
            class="w-20 h-20 lg:w-24 lg:h-24 rounded-full flex items-center justify-center bg-white/5 p-2 shadow-inner"
          >
            <img
              src="/images/logo.svg"
              alt="Miche Lts"
              class="w-full h-full object-contain"
            />
          </div>
          <div class="hidden sm:block">
            <h1 class="text-xl lg:text-2xl font-serif font-bold text-white">
              Miche Lts
            </h1>
            <p class="text-xs text-gray-400 uppercase tracking-wider">Bar</p>
          </div>
        </div>

        <!-- NAV DESKTOP -->
        <nav
          class="hidden md:flex space-x-10 lg:space-x-12 text-base lg:text-lg font-medium uppercase tracking-wider"
        >
          <a href="/" class="nav-link">Inicio</a>
          <a href="#menu" class="nav-link">Carta</a>
          <a href="#eventos" class="nav-link">Eventos</a>
          <a href="#contacto" class="nav-link">Contacto</a>
        </nav>

        <!-- BOTÓN HAMBURGUESA -->
        <button
          id="menuBtn"
          class="md:hidden text-white focus:outline-none"
          aria-label="Abrir menú"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- MENÚ MÓVIL -->
      <div
        id="mobileMenu"
        class="md:hidden hidden bg-bg/95 backdrop-blur-lg border-t border-white/10"
      >
        <nav
          class="flex flex-col text-center py-6 space-y-6 text-lg font-medium uppercase tracking-wider"
        >
          <a href="/" class="mobile-link">Inicio</a>
          <a href="#menu" class="mobile-link">Carta</a>
          <a href="#eventos" class="mobile-link">Eventos</a>
          <a href="#contacto" class="mobile-link">Contacto</a>
        </nav>
      </div>
    </header>

    <main class="pt-28 min-h-screen">
      <slot />
    </main>

    <footer class="mt-20 py-12 border-t border-white/10 bg-black/40">
      <div class="container mx-auto px-4 text-center">
        <h3 class="text-2xl font-serif font-bold mb-4">Miche Lts</h3>
        <p class="text-gray-400 mb-6">El mejor ambiente de Celaya.</p>
        <div class="text-sm text-gray-500">
          &copy; {new Date().getFullYear()} Miche Lts. Todos los derechos reservados.
        </div>
      </div>
    </footer>
    <script>
      const btn = document.getElementById("menuBtn");
      const menu = document.getElementById("mobileMenu");

      btn?.addEventListener("click", () => {
        menu?.classList.toggle("hidden");
      });
    </script>
  </body>
</html>
