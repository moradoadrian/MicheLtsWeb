---
import Layout from "../components/Layout.astro";
import Hero from "../components/Hero.astro";
import Carousel from "../components/Carousel.astro";
import MenuGrid from "../components/MenuGrid.astro";
import EventCard from "../components/EventCard.astro";

import promos from "../content/promos.json";
import menu from "../content/menu.json";
import events from "../content/events.json";
---

--- import Layout from "../components/Layout.astro"; import Hero from
"../components/Hero.astro"; import Carousel from "../components/Carousel.astro";
import MenuGrid from "../components/MenuGrid.astro"; import EventCard from
"../components/EventCard.astro"; import promos from "../content/promos.json";
import menu from "../content/menu.json"; import events from
"../content/events.json"; ---

<Layout>
  <Hero />

  <Carousel items={promos} />

  <MenuGrid menu={menu.slice(0, 6)} />

  <section id="eventos" class="py-20 bg-white/5">
    <div class="container mx-auto px-4">
      <div
        class="flex flex-col md:flex-row justify-between items-end mb-12 gap-4"
      >
        <div>
          <h2 class="text-4xl font-bold text-white mb-2">
            Próximos <span class="text-brand">Eventos</span>
          </h2>
          <p class="text-gray-400">No te pierdas nuestras noches especiales.</p>
        </div>
        <a
          href="#"
          class="text-brand hover:text-white transition-colors text-sm font-bold uppercase tracking-wider"
          >Ver calendario completo &rarr;</a
        >
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {events.map((e) => <EventCard event={e} />)}
      </div>
    </div>
  </section>

  <section id="contacto" class="py-20 relative overflow-hidden">
    <!-- Decorative background -->
    <div
      class="absolute top-0 left-0 w-full h-px bg-linear-to-r from-transparent via-brand/50 to-transparent"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div
        class="max-w-4xl mx-auto bg-black/40 border border-white/10 rounded-3xl p-8 md:p-12 backdrop-blur-sm"
      >
        <div class="text-center mb-10">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Encuéntranos</h2>
          <p class="text-gray-400">Ven a vivir la experiencia Miche Lts.</p>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div
                class="w-10 h-10 rounded-full bg-brand/10 flex items-center justify-center text-brand shrink-0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-white text-lg mb-1">Ubicación</h3>
                <p class="text-gray-400">
                  Av. 12 de Octubre No. 226, Col. Nuevo Celaya Celaya, Gto.
                </p>
                <a
                  href="#"
                  class="text-brand text-sm mt-2 inline-block hover:underline"
                  >Ver en mapa</a
                >
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="w-10 h-10 rounded-full bg-brand/10 flex items-center justify-center text-brand shrink-0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-white text-lg mb-1">Horario</h3>
                <p class="text-gray-400">Lunes a Domingo</p>
                <p class="text-brand font-bold">5:00pm - 2:00am</p>
              </div>
            </div>
          </div>

          <div class="bg-white/5 rounded-xl p-6 border border-white/5">
            <h3 class="font-bold text-white mb-4">Reservaciones</h3>
            <p class="text-gray-400 text-sm mb-6">
              Asegura tu lugar para los eventos especiales.
            </p>
            <a
              href="tel:+521234567890"
              class="block w-full py-3 bg-brand hover:bg-brand-dark text-black font-bold text-center rounded-lg transition-colors"
            >
              Llamar ahora
            </a>
            <a
              href="#"
              class="block w-full py-3 mt-3 border border-white/20 hover:bg-white/5 text-white font-semibold text-center rounded-lg transition-colors"
            >
              WhatsApp
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
